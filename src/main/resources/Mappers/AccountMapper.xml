<!DOCTYPE mapper>
<mapper namespace="AccountMapper">
    <select id="checkAccount" resultType="pojo.po.Account">
        select * from account where number = #{number} and password = #{password}
    </select>
    <insert id="insertAccount">
        insert into account (number,password,userId) values(#{number},#{password},#{userId})
    </insert>

    <!--int selectIdByNumber()-->

    <!--根据手机号查找用户id-->
    <select id="selectIdByNumber" parameterType="string" resultType="pojo.po.Account">
        select * from account where number=#{number}
    </select>
</mapper>